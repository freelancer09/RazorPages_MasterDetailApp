@page
@model PDMasterDetail.Pages.MikeT.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="continer">
    <main role="main" class="pb-3" style="border:solid goldenrod 2px; background-color:crimson;padding:20px;border-radius:5px;">
    <h1 style="text-align:center; background-color:tomato;">*WARNING* Delete @Html.DisplayFor(model => model.SCP.Name) *WARNING*</h1>

    <h3>Are you sure you want to delete this file?</h3>
        <hr style="border:double  black 2px;">
        <div>
            <h4>@Html.DisplayFor(model => model.SCP.Name) |  @Html.DisplayFor(model => model.SCP.ObjectClass) | @Html.DisplayFor(model => model.SCP.Classification)</h4>
            <hr />
            <div>
                <dl class="row">
                    <div class="col-sm-9">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SCP.Description)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.TextAreaFor(model => model.SCP.Description,new{style = "height:200px;", @class = "form-control"})
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SCP.Containment)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.TextAreaFor(model => model.SCP.Containment,new{style = "height:200px;", @class = "form-control"})
                        </dd>
                    </div>
                    <div class="col-sm-3 text-center">
                        <dt style="background-color:white; border:black 1px solid;">
                            @Html.DisplayNameFor(model => model.SCP.ImageName)
                        </dt>
                        <dd style="background-color:lightgray; height:200px;border-bottom:black 1px solid;border-left:black 1px solid;border-right:black 1px solid;">
                            @Html.DisplayFor(model => model.SCP.ImageName)
                        </dd>
                    </div>
                </dl>
            </div>
            
            <form method="post">
                <input type="hidden" asp-for="SCP.ID" />
                <input type="submit" value="Delete" class="btn btn-dark" /> |
                <a asp-page="./Index">Back to Main</a>
            </form>
            
        </div>
    </main>
</div>
