@page
@model PDMasterDetail.Pages.SCPs.CreateModel

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-white">Report</h1>

<div class="p-3 bg-dark text-light rounded">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SCP.Name" class="control-label"></label>
                    <input asp-for="SCP.Name" class="form-control" />
                    <span asp-validation-for="SCP.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SCP.ObjectClass" class="control-label"></label>
                    <input asp-for="SCP.ObjectClass" class="form-control" />
                    <span asp-validation-for="SCP.ObjectClass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SCP.Classification" class="control-label"></label>
                    <input asp-for="SCP.Classification" class="form-control" />
                    <span asp-validation-for="SCP.Classification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SCP.Description" class="control-label"></label>
                    <textarea asp-for="SCP.Description" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="SCP.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SCP.Containment" class="control-label"></label>
                    <textarea asp-for="SCP.Containment" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="SCP.Containment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SCP.ImageName" class="control-label"></label>
                    <input asp-for="SCP.ImageName" class="form-control" />
                    <span asp-validation-for="SCP.ImageName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Report" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-page="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
