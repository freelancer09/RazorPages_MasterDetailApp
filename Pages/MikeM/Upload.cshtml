@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model PDMasterDetail.Pages.MikeM.UploadModel
@{
    ViewData["Title"] = "Upload an image";
}
<h1 class="text-white">Upload an image</h1>

<div class="p-3 bg-dark text-light rounded">
    <form method="post" enctype="multipart/form-data">
        <input class="btn btn-primary" type="file" name="postedFiles" multiple />
        <input class="btn btn-primary" type="submit" value="Upload" asp-page-handler="Upload" />
        <br />
        <span class="text-success">@Html.Raw(Model.Message)</span>
    </form>
</div>